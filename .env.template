## InfraTracker .env template

# Flask runtime
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1                # 1 to enable debugger in dev
HOST=0.0.0.0
PORT=5000

# Security
SECRET_KEY=change-this-to-a-long-random-string

# Database (pick ONE; default is SQLite)
# SQLite (local file)
SQLALCHEMY_DATABASE_URI=sqlite:///infratrack.db

# PostgreSQL example:
# SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://infratrack_user:strongpass@db-host:5432/infratrack

# MySQL/MariaDB example:
# SQLALCHEMY_DATABASE_URI=mysql+pymysql://infratrack_user:strongpass@db-host:3306/infratrack

# Flask-WTF / CSRF
WTF_CSRF_TIME_LIMIT=3600

# Logging
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1



# Terraform variables
# Set as environment variables so Terraform picks them up as TF_VAR_*

TF_VAR_aws_region=us-west-2
TF_VAR_instance_type=t3.micro
TF_VAR_key_name=infratrack-key
TF_VAR_public_key_path=~/.ssh/id_rsa.pub
TF_VAR_s3_bucket_name=infratrack-logs-change-me


# Deployment 
# Used by Ansible/GitHub Actions scripts 

DEPLOY_HOST=                 
DEPLOY_USER=
DEPLOY_SSH_KEY=~/.ssh/id_rsa
REPO_URL=https://github.com/your-org/infratrack.git